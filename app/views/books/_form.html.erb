<h2>New Book</h2>
  <%= form_with model: book do |f| %>
    
  <div class="form-group">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
  </div>
  
  <div class="form-group">
    <label for="book_opinion">Opinion</label>
    <%= f.text_area :body %>
  </div>
   
   <div class="form-group">
     <%= f.submit 'CreateBooks', class: "btn btn-success" %>
    
  </div>   
    
    
  
  <% end %>


