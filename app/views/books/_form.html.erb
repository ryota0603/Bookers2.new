<h2>New Book</h2>
  <%= form_with model: book do |f| %>
    
  <div class="form-group">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
  </div>
  
  <div class="form-group">
    <label for="book_opinion">Opinion</label>
    <%= f.text_area :body %>
  </div>
      
    
    <%= f.submit 'CreateBooks' %><div class="col-md-3">
  
  <% end %>


