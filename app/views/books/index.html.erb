<h2>New Book</h2>
  <%= form_with model: @book do |f| %>
    
  <div class="form-group">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
  </div>
  
  <div class="form-group">
    <label for="book_opinion">Opinion</label>
    <%= f.text_area :body %>
  </div>
      
    
    <%= f.submit 'CreateBooks' %>
  <% end %>
  


<h1>Books</h1>
  
  
         
  <table>
    <thead>
      <tr>
  			<th>Title</th>
  			<th>Opinion</th>
  			<th></th>
  		</tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= image_tag 'default-image.jpg' %></td>
          <td>
            <%= link_to book_path(book.id) do %>
              <%= book.title %>
            <% end %>
          </td>
        
          <td><%= book.body %></td>
          
          
        </tr>
      <% end %>
    </tbody>
  </table>
